@model Workhous.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PricePerHour)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PricePerHour)
        </dd>

    </dl>
    <table>
        @foreach (var timeEntry in Model.TimeEntries)
        {
            <tr>
                <td>
                    @timeEntry.Day.ToString("dd.MM")
                </td>
                <td>
                    @timeEntry.NumOfHours hours
                </td>
            </tr>
        }
    </table>


</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
